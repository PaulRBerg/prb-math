{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": ["error", ">=0.8.19"],
    "function-max-lines": "off",
    "gas-strict-inequalities": "off",
    "max-line-length": ["error", 132],
    "no-global-import": "off",
    "no-inline-assembly": "off",
    "use-natspec": "off",
    "var-name-mixedcase": "off"
  }
}
